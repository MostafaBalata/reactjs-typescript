{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "lib": ["es5", "es6", "dom"],
  },
  "include": [
    "./src/**/**/*",
    "webpack/webpack.config.prod.js",
    "webpack/webpack.config.dev.js",
    "webpack/paths.js",
    "config/webpack.config.js"
  ]
}