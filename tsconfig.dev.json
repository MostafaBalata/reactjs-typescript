{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/**/*"
  ]
}